@model List<Users>
@{
    ViewData["Title"] = "Relação de usuários cadastrados";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-3">
        <a type="button" asp-controller="Users" asp-action="Register" class="btn btn-primary mt-2">Cadastrar usuário</a>
    </div>

    @if(TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-dismiss="modal" aria-label="Close">
                <span class="close-span" aria-hidden="true">&times;</span>
            </button>
            @TempData["SuccessMessage"]
        </div>
    }

    @if(TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-dismiss="modal" aria-label="Close">
                <span class="close-span" aria-hidden="true">&times;</span>
            </button>
            @TempData["ErrorMessage"]
        </div>
    }

    <h1 class="mt-3 mb-3">@ViewData["Title"]</h1>

    <table id="users-table" class="table table-bordered table-striped table-light">

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">MASP</th>
                <th scope="col">Nome completo</th>
                <th scope="col">Login</th>
                <th scope="col">E-mail</th>
                <th scope="col">Telefone</th>
                <th scope="col">Cargo</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>

            @foreach (Users u in Model)
            {
                <tr>
                    <th scope="row">@u.Id</th>
                    <td>@u.Masp</td>
                    <td>@u.FullName</td>
                    <td>@u.Login</td>
                    <td>@u.Email</td>
                    <td>@u.Phone</td>
                    <td>@u.PublicOffice</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a role="button" asp-route-id="@u.Id" asp-controller="Users" asp-action="Edit"
                                class="btn btn-sm btn-outline-primary">Editar</a>

                            <a role="button" asp-route-id="@u.Id" asp-controller="Users" asp-action="Delete"
                                class="btn btn-sm btn-outline-danger">Apagar</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>
